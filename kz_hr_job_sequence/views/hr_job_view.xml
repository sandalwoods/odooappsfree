<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_job_form_inherit_seq_number" model="ir.ui.view">
            <field name="name">hr.job.form.inherit.seq_number</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form" />
            <field name="arch" type="xml">
                <field name="no_of_recruitment" position="after">
                    <field name="seq_number"/>
                </field>
            </field>
        </record>

        <record id="view_jobs_tree_inherit_seq_number" model="ir.ui.view">
            <field name="name">hr.job.tree.inherit.seq_number</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="seq_number"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
